{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "outputs": ["dist/**", "build/**", "**.map"],
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "format": {},
    "check-format": {}
  },
  "globalDependencies": ["pnpm-lock.yaml"]
}
